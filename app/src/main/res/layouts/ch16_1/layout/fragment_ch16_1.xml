<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ch16_1.Ch16_1_Fragment">


    <Button
        android:id="@+id/ch16_1_btnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:text="@string/ch16_1_textLeftSign"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ch16_1_btnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="@string/ch16_1_textRightSign"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/ch16_1_btnLeft"
        app:layout_constraintTop_toTopOf="@+id/ch16_1_btnLeft" />

    <idv.tfp10102.wayne.ch16_1.Ch16_1_MyView
        android:id="@+id/ch16_1_myView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ch16_1_btnLeft" />
</androidx.constraintlayout.widget.ConstraintLayout>