<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ch18_3.Ch18_3_Fragment">

    <RadioGroup
        android:id="@+id/ch18_3_animationRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ch18_3_textAnimation" />

        <RadioButton
            android:id="@+id/ch18_3_tranRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ch18_3_textTranslateAnimation" />

        <RadioButton
            android:id="@+id/ch18_3_scaleRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ch18_3_textScaleAnimation" />

        <RadioButton
            android:id="@+id/ch18_3_rotateRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ch18_3_textRotateAnimation" />

        <RadioButton
            android:id="@+id/ch18_3_alphaRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ch18_3_textAlphaAnimation" />

        <RadioButton
            android:id="@+id/ch18_3_colorRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ch18_3_textColorAnimator" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/ch18_3_interpolatorRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/ch18_3_animationRadioGroup"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ch18_3_textInterpolator" />

        <RadioButton
            android:id="@+id/ch18_3_linearRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ch18_3_textLinearInterpolator" />

        <RadioButton
            android:id="@+id/ch18_3_accelerateRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ch18_3_textAccelerateInterpolator" />

        <RadioButton
            android:id="@+id/ch18_3_decelerateRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ch18_3_textDecelerateInterpolator" />

        <RadioButton
            android:id="@+id/ch18_3_accelerateDecelerateRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ch18_3_textAccelerateDecelerateInterpolator" />

        <RadioButton
            android:id="@+id/ch18_3_anticipateRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ch18_3_textAnticipateInterpolator" />

        <RadioButton
            android:id="@+id/ch18_3_overshootRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ch18_3_textOvershootInterpolator" />

        <RadioButton
            android:id="@+id/ch18_3_anticipateOvershootRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ch18_3_textAnticipateOvershootInterpolator" />

        <RadioButton
            android:id="@+id/ch18_3_bounceRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ch18_3_textBounceInterpolator" />

        <RadioButton
            android:id="@+id/ch18_3_cycleRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ch18_3_textCycleInterpolator" />
    </RadioGroup>

    <ImageView
        android:id="@+id/ch18_3_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/android"
        app:layout_constraintTop_toBottomOf="@+id/ch18_3_interpolatorRadioGroup"
        tools:layout_editor_absoluteX="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>